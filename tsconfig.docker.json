{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "outDir": "./dist-docker",
    "rootDir": "./",
    "noEmit": false
  },
  "include": ["./apollo-server/server.mts"],
  "exclude": ["node_modules"]
}
